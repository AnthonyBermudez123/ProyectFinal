-- Primera Version de la base de datos "TerrorTiket"

-- Tabla de Categor√≠as de Edad
CREATE TABLE CategoriasEdad (
    CategoriaID INT PRIMARY KEY,
    Nombre VARCHAR(50) NOT NULL
);

-- Tabla de Precios
CREATE TABLE Precios (
    PrecioID INT PRIMARY KEY,
    CategoriaID INT,
    Precio DECIMAL(10, 2) NOT NULL,
    FOREIGN KEY (CategoriaID) REFERENCES CategoriasEdad(CategoriaID)
);

-- Tabla de Usuarios 
    UsuarioID INT PRIMARY KEY,
    Nombre VARCHAR(50) NOT NULL,
    -- Otros campos relacionados con los usuarios
);

-- Tabla de Entradas
CREATE TABLE Entradas (
    EntradaID INT PRIMARY KEY,
    UsuarioID INT,
    CategoriaID INT,
    FechaCompra DATE NOT NULL,
    FOREIGN KEY (UsuarioID) REFERENCES Usuarios(UsuarioID),
    FOREIGN KEY (CategoriaID) REFERENCES CategoriasEdad(CategoriaID)
);

